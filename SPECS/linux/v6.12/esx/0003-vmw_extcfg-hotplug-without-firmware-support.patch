+#define VCS_VCPUID_SUBSET_IDX(v) ((v) >> VCS_SUBSET_SHIFT)
+#define VCS_VCPUID_SUBSET_BIT(v) (CONST64U(1) << ((v)&VCS_SUBSET_MASK))
 
 #define DEV_HP_QUEUE_BASE (0xA0 + 0x10)
 
@@ -95,6 +111,8 @@ int detect_hotpluggable_mem(void);
 
