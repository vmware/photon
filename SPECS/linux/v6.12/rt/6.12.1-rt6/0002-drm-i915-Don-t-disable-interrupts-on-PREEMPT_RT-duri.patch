@@ -911,7 +913,8 @@ intel_legacy_cursor_update(struct drm_pl
 		intel_plane_disable_arm(plane, crtc_state);
 	}
 
-	local_irq_enable();
+	if (!IS_ENABLED(CONFIG_PREEMPT_RT))
+		local_irq_enable();
 
