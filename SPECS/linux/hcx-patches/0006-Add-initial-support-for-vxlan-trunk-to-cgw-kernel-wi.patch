+static int vxlan_trunk_do_op(struct net_device *dev,
+			     u32 src_id, u32 dst_id, int flags, int op)
+{
+	/* validate vxlan -> vlan */
+	if (flags != TRF_VNI_TO_VLAN) {
+		return -EINVAL;
+	}
+	if (src_id >= VXLAN_N_VID) {
+		return -EINVAL;
+	}
+	if (dst_id >= VLAN_N_VID) {
+		return -EINVAL;
+	}
+	return trunk_do_op(dev, src_id, dst_id, flags, op);
+}
