+static int vlan_trunk_do_op(struct net_device *dev,
+			    u32 src_id, u32 dst_id, int flags, int op)
+{
+	/* validate vlan -> vlan */
+	if (flags != TRF_VLAN_TO_VLAN) {
+		return -EINVAL;
+	}
+	if (src_id >= VLAN_N_VID) {
+		return -EINVAL;
+	}
+	if (dst_id >= VLAN_N_VID) {
+		return -EINVAL;
+	}
+	return trunk_do_op(dev, src_id, dst_id, flags, op);
+}
