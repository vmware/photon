 	if (WARN_ON_ONCE(expires < 0))
 		return -ETIME;
@@ -324,9 +364,20 @@ int clockevents_program_event(struct clock_event_device *dev, ktime_t expires,
 		return dev->set_next_ktime(expires, dev);
 
