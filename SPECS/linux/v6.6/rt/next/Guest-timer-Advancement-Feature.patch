+
 	if (delta <= 0)
 		return force ? clockevents_program_min_delta(dev) : -ETIME;
 
+	if (timer_padding_is_enabled()) {
+		min_overhead_ns = tsc_delta2ns(this_cpu_read(min_overhead_tsc), dev);
